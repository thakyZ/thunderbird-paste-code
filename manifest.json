{
    "manifest_version": 2,
    "name": "Paste code",
    "description": "Thunderbird addon creating a context menu option that pastes code beautifully in HTML messages",
    "version": "0.1",
    "author": "Paul Wellner Bou",
    "browser_specific_settings": {
        "gecko": {
            "id": "pastecode@wellnerbou.de",
            "strict_min_version": "78.0"
        }
    },
    "permissions": [
        "menus",
        "compose",
        "clipboardRead"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}